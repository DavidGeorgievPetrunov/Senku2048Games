                android:layout_column="0" />

            <Button
                style="@style/filledCircleChild"
                android:layout_row="3"
                android:layout_column="1" />

            <Button
                style="@style/filledCircleChild"
                android:layout_row="3"
                android:layout_column="2" />

            <Button
                style="@style/filledCircleChild"
                android:layout_row="3"
                android:layout_column="3"
